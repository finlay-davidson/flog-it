{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "lib": ["ES2022"],
        "types": ["node", "express"],
        "strict": true,

        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,

        "skipLibCheck": true
    },
    "include": ["src", "src/types"],
    "exclude": ["node_modules"]
}
