{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "lib": ["ES2022"],
        "types": ["node", "express"],
        "strict": true,

        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "allowImportingTsExtensions": true,
        "noEmit": true,

        "skipLibCheck": true
    },
    "include": ["types", "utils", "helpers", "middleware", "routes"],
    "exclude": ["node_modules"]
}
